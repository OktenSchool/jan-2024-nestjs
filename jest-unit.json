{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "src",
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s",
    "!**/index.ts",
    "!**/*.module.ts",
    "!**/*.repository.ts",
    "!**/database/**/*"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 60,
      "lines": 80,
      "statements": 80,
      "functions": 80
    }
  },
  "silent": true,
  "collectCoverage": false,
  "coverageDirectory": "../coverage"
}
